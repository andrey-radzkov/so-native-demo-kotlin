<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fast complaint creation"
        android:visibility="visible"
        />

    <TextView android:text="Tap here to scan product barcode!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/barcodeScannedValue"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type here to describe problem"
        android:id="@+id/issueDescription"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send to PROSO"
        android:id="@+id/sendToProso"
/>



</LinearLayout>